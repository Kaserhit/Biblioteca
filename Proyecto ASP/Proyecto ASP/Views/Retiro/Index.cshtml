@model IEnumerable<Proyecto_ASP.Models.CAT_LIBROS>

@{
    ViewBag.Title = "Retirar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Libros Disponibles</h2>
<img src="~/Content/images/b634f67701f7d7b04b39f31511444f7d.png" style="margin: 0 auto; width: 10%;" />

<table class="table">
    <tr>
        <th>
            ISBN
        </th>
        <th>
            Nombre del Libro
        </th>
        <th>
            Autor
        </th>
        <th>
            Editorial
        </th>
        <th>
            Unidades
        </th>
        <th>
            Edicion
        </th>
        <th>
            Escuela
        </th>
        <th>
            Tematica
        </th>
        <th>
            Asignatura
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.editorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.escuela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tematica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.asignatura)
            </td>
            <td>
                @Html.ActionLink("Retirar", "Retirar", new { id = item.isbn }, null)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Regresar", "Back")
</div>