@model IEnumerable<Proyecto_ASP.Models.CAT_LIBROS_DAÑADOS>

@{
    ViewBag.Title = "IndexDañados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Libros Dañados</h2>

<table class="table">
    <tr>
        <th>
            ISBN
        </th>
        <th>
            Nombre del Libro
        </th>
        <th>
            Autor
        </th>
        <th>
            Editorial
        </th>
        <th>
            Unidades
        </th>
        <th>
            Edicion
        </th>
        <th>
            Escuela
        </th>
        <th>
            Tematica
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Costo de Reparacion
        </th>
        <th>
            Asignatura
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.editorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.escuela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tematica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costo_reparacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.asignatura)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.isbn }, null) |
                @Html.ActionLink("Detalles", "DetallesDañados", new { id = item.isbn }, null) |
                @Html.ActionLink("Eliminar", "EliminarDañados", new { id = item.isbn }, new { @Class = "MEliminar" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Regresar", "Back")
</div>


@section scripts{

    <script>
        $(".MEliminar").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar el libro?')) {
                event.preventDefault();
            }
        });
    </script>
}
